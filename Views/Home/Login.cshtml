@{
    ViewData["Title"] = "Home Login Page";
}

@{
    var errol = ViewData["Errol"] as string;
}
<link href="~/frontend/dist/css/adminlte.min.css" rel="stylesheet" />
<link href="~/frontend/dist/css/adminlte.css" rel="stylesheet" />
<style>
    body {
        display: flex;
        margin-top:100px;
        justify-content: center;
        height: 100vh;
        margin: 0;
    }

    .step {
        text-align: center;
    }
</style>
<div class="col-md-12" style="margin-top:70px;">
    <div class="card card-default">
        <div class="card-header" style="display:flex;justify-content:center;">
            <h3 class="card-title" style="justify-content:center;">Học viện kỹ thuật quân sự</h3>
        </div>
        <div class="text-center">
            <img src="/frontend/dist/img/Banner_Cong2_cu.png" alt="Học Viện Kỹ thuật Quân Sự" class="img-fluid">
        </div>
        <div class="card-body p-0">
            <div class="bs-stepper linear">
                <div class="bs-stepper-header" role="tablist">
                    <!-- your steps here -->
                    <div class="line"></div>

                     <div class="step active" data-target="#logins-part">
                        <button type="button" class="step-trigger" role="tab" aria-controls="logins-part" id="logins-part-trigger" aria-selected="true">
                            <h3 class="bs-stepper-label">Đăng nhập</h3>
                        </button>
                    </div> 
                    
                    <div class="line"></div>

                </div>
                <div class="bs-stepper-content" style="display:flex;width:auto;justify-content:center;">
                    <!-- form cho đăng nhập

                        sau khi nhấn nút "đăng nhập " thông tin chuyển đến homecontroller/ LoginButtonClick để xử lý dữ liệu

                    -->


                    <form method="post" action="/Home/LoginButtonClick">
                        <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Tên đơn vị</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" name="exampleInputEmail1" placeholder="Nhập phiên hiệu đơn vị">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Mật khẩu</label>
                                <input type="password" class="form-control" id="exampleInputPassword1" name="exampleInputPassword1" placeholder="Mật khẩu">
                            </div>
                            <span class="text-danger" >@errol</spanclass><br/>

                                <button class="btn btn-primary" type="submit" style="width: 200px;margin-left: 100px;">Đăng nhập</button>
                        </div>
                    </form>




                </div>

                <!-- form cho đăng nhập-->
                <div id="information-part" class="content" role="tabpanel" aria-labelledby="information-part-trigger">
                    <div class="form-group">
                        <label for="exampleInputFile">File input</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="exampleInputFile">
                                <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                            </div>
                            <div class="input-group-append">
                                <span class="input-group-text">Upload</span>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary" onclick="stepper.previous()">Previous</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.card -->
</div>